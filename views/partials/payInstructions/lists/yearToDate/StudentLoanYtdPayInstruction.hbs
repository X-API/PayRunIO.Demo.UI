<table class="table table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Value</th>
            <th>Calculation Method</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th width="50px"></th>
        </tr>
    </thead>
    <tbody>
        {{#each Instructions}}
        <tr>
            <th scope="row">
                <a class="launch-modal" data-modal-size="modal-lg" data-modal-title="Student Loan" href="/employer/{{../ParentContext.EmployerId}}/employee/{{../ParentContext.Id}}/payInstruction/{{this.Id}}">
                    {{this.Id}}
                </a>
            </th>
            <td>
                {{formatSalary this.Value}}
            </td>
            <td>
                {{this.StudentLoanCalculationMethod}}
            </td>
            <td>
                {{this.StartDate}}
            </td>
            <td>
                {{this.EndDate}}
            </td>
            <td>
                <button type="button" 
                    class="btn btn-danger btn-sm btn-delete-instruction" 
                    data-employer-id="{{../ParentContext.EmployerId}}" 
                    data-employee-id="{{../ParentContext.Id}}" 
                    data-id="{{this.Id}}">
                    Delete
                </button>                
            </td>                                                         
        </tr>
        {{/each}}                    
    </tbody>
</table>