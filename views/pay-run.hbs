<form method="POST" action="/Employer/{{EmployerId}}/payRun">
    {{>breadcrumbs}}

    {{>validationErrors}}

    <div class="row">
        <div class="col-sm-12 col-md-6">
            <div class="form-group">
                <label for="PaymentDate">Payment date</label>
                <input type="date" 
                    class="form-control form-control-lg" 
                    id="PaymentDate" 
                    name="PaymentDate" 
                    value="{{PaymentDate}}" 
                    placeholder="The date the employees were paid in the pay run" 
                    required>

                <span class="notes">The date the employees were paid in the pay run.</span>
            </div>

            <div class="form-group">
                <label for="StartDate">Start date</label>
                <input type="date" 
                    class="form-control form-control-lg" 
                    id="StartDate" 
                    name="StartDate" 
                    value="{{StartDate}}" 
                    placeholder="The pay period start date" 
                    required>

                <span class="notes">The pay period start date.</span>
            </div>
        </div>

        <div class="col-sm-12 col-md-6">
            <div class="form-group">
                <label for="EndDate">End date</label>
                <input type="date" 
                    class="form-control form-control-lg" 
                    id="EndDate" 
                    name="EndDate" 
                    value="{{EndDate}}" 
                    placeholder="The pay period end date" 
                    required>

                <span class="notes">The pay period end date.</span>
            </div>

            <div class="form-group">
                <label for="PaySchedule">Pay Schedule</label>

                <select class="form-control" id="PaySchedule" name="PaySchedule" required>
                    {{#each PaySchedules}}
                        <option value="{{this.Id}}">{{this.Name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Queue up</button>
        </div>
    </div>    
</form>