{{>breadcrumbs}}

{{>status}}

{{#if ShowTabs}}
    <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Employee</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="instructions-tab" data-toggle="tab" href="#instructions" role="tab" aria-controls="instructions" aria-selected="false">Instructions</a>
        </li>        
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            {{>employeeForm}}
        </div>

        <div class="tab-pane fade" id="instructions" role="tabpanel" aria-labelledby="instructions-tab">
            <div class="row actions">
                <div class="col-sm-12">
                    <div class="dropdown show">
                        <a class="btn btn-primary dropdown-toggle" 
                            href="#" 
                            role="button" 
                            id="addNewPayInstruction" 
                            data-toggle="dropdown" 
                            aria-haspopup="true" 
                            aria-expanded="false">
                            Add a new pay instruction
                        </a>

                        <div class="dropdown-menu" aria-labelledby="addNewPayInstruction">
                            <a class="dropdown-item" href="/employer/{{EmployerId}}/employee/{{Id}}/payInstruction/new?type=PrimitivePayInstruction">Primitive instruction</a>
                            <a class="dropdown-item" href="/employer/{{EmployerId}}/employee/{{Id}}/payInstruction/new?type=SalaryPayInstruction">Salary instruction</a>
                            <a class="dropdown-item" href="/employer/{{EmployerId}}/employee/{{Id}}/payInstruction/new?type=TaxPayInstruction">Tax instruction</a>
                            <a class="dropdown-item" href="/employer/{{EmployerId}}/employee/{{Id}}/payInstruction/new?type=RatePayInstruction">Rate Pay instruction</a>
                            <a class="dropdown-item" href="/employer/{{EmployerId}}/employee/{{Id}}/payInstruction/new?type=StudentLoanPayInstruction">Student loan pay instruction</a>
                        </div>
                    </div>
                </div>
            </div>

            {{#if PayInstructions}}
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Salary</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each PayInstructions}}
                    <tr>
                        <th scope="row">
                            <a href="/employer/{{../EmployerId}}/employee/{{../Id}}/payInstruction/{{this.Id}}">
                                {{this.Id}}
                            </a>
                        </th>
                        <td>
                            {{formatSalary this.AnnualSalary}}
                        </td>
                        <td>
                            {{this.StartDate}}
                        </td>
                        <td>
                            {{this.EndDate}}
                        </td>
                        <td>
                            {{this.Description}}
                        </td>                                              
                    </tr>
                    {{/each}}                    
                </tbody>
            </table>
            {{/if}}                                    
        </div>        
    </div>        
{{else}}
    {{>employeeForm}}
{{/if}}

<script src="/js/employee.js"></script>